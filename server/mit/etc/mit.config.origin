%% -*- mode: erlang;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ft=erlang ts=4 sw=4 et
[{kernel, 
	[{start_timer, true}, 
	 {start_pg2, true}
 ]},
 {sasl, [
	{sasl_error_logger, {file, "log/mit_sasl.log"}}
 ]},
 {mnesia, [
	{dir, "var/mnesia"}
 ]},
 {evmon, [
	{vm_memory_high_watermark, 0.2},
	{proc, [{long_gc, 500}, {large_heap, 5000000}, busy_port]}
 ]},
 {emysql, [
	{pool_size, 4},
    {host, "MYSQL_HOST"}, 
    {port, MYSQL_PORT}, 
    {username, "MYSQL_USER"}, 
    {password, "MYSQL_PASS"}, 
    {database, "MYSQL_DB"},
    {encoding, utf8}
 ]},
 {amqp_client, [
    {broker, [
		{host, "AMQP_HOST"}, 
        {vhost, <<"/AMQP_VHOST">>}, 
        {user, <<"AMQP_USER">>}, 
        {password, <<"AMQP_PASS">>}
    ]},
	{reconn_policy, [
		{interval, 30}
    ]}
 ]},
 {lager, [
	{error_logger_redirect, false},
	{crash_log, "log/mit_crash.log"},
	{handlers, [
		%{lager_console_backend, info},
		{lager_file_backend, [
			{"log/mit_info.log", info, 20485760, "$D0", 5},
			{"log/mit_error.log", error, 20485760, "$D0", 5}
		]}
	]}
 ]},
 {mit, [
	{mode, master},
	{is_fitap_cn_discovered, false},
    {is_ap_cn_discovered, false},
    {is_sw_cn_discovered, false},
    {fitap_filter, undefined}
 ]}
].

